                    <label><img src="~/Content/Images/time.svg" style="width: 50px;height: 50px;" /></label>
                    <p style="line-height: 50px;margin-left: 10px;">@Model.Fastest.Duration h</p>
                </div>
            </div>
            <div class="d-flex justify-content-center flex-column">

                <div class=" d-flex">

                    @if (citiesF.Count > 0)
                    {


                        bool evenNodeF = false;
                        string destinationF = citiesF.Last();
                        var citiesFList = citiesF.ToList();
                        citiesFList.Remove(destinationF);
                        <div class="line">
                        </div>
                        <div class="path d-flex justify-content-between">


                            @foreach (var x in citiesFList)
                            {<div class="d-flex flex-column">
                                    @if (!@evenNodeF)
                                    {
                                        <p style="height:20px; width:30px;">@x</p>
                                    }
                                    else
                                    {
                                        <p style=" height:20px"></p>
                                    }
                                    <div>
                                        <span class="dot"></span>
                                    </div>
                                    @if (@evenNodeF)
                                    {
                                    <p style="height:20px; width:30px;">@x</p>
                                    }
                                    else
                                    {
                                        <p></p>
                                    }
                                    @{evenNodeF = !evenNodeF;}
                                </div>
                            }
                            <div class="d-flex flex-column">
                                @if (!@evenNodeF)
