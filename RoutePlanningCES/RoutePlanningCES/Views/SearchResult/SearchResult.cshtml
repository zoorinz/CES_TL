        <div class="d-flex flex-row mobile space">
            <div class="d-flex flex-column">
                <h2 class="text-center my-3">Fastest</h2>
                <div class="d-flex flex-row">
                    <label><label><img src="~/Content/Images/pig.svg" style="width: 50px;height: 50px;" /></label></label>
                    <p style="line-height: 50px;margin-left: 10px;"> @Model.Fastest.Price $</p>
                </div>
                @*<div class="d-flex flex-row">
                    <label>Price:</label>
                    <p> @Model.Fastest.Price $</p>
                </div>*@
