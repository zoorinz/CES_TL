@model RoutePlanningCES.Models.DTOs.SearchResultDTO
@using System.Linq;
@{
    ViewBag.Title = "SearchResult";
}

@{
    List<string> citiesF = new List<string>();
    foreach (var cityOfPath in Model.Fastest.Cities)
    {
        citiesF.Add(@cityOfPath.Name);
    }
    List<string> citiesC = new List<string>();
    foreach (var cityOfPath in Model.Cheapest.Cities)
    {
        citiesC.Add(@cityOfPath.Name);
    }
    List<string> citiesB = new List<string>();
    foreach (var cityOfPath in Model.Best.Cities)
    {
        citiesB.Add(@cityOfPath.Name);
    }
}

